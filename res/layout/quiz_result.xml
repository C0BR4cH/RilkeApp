<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:gravity="center_horizontal">
  <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/txtRTitle" android:text="Rilke Quiz Result"></TextView>
  	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:layout_weight="1">
			<TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/txtRCorrect" android:text="Correct:"></TextView>
		    <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/txtRCorrectNum" android:text="0"></TextView>
		    <TextView android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_height="wrap_content" android:id="@+id/txtRCorrectMax" android:text="/11"></TextView>
  	</LinearLayout>
  	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal">
  			<Button android:text="Home" android:id="@+id/btnRHome" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
  			<Button android:text="Try Again" android:id="@+id/btnAgain" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
  	</LinearLayout> 
</LinearLayout>
